---
import Blog from '../layouts/Blog.astro';
import { format, parseISO } from 'date-fns';

const posts = await Astro.glob('../pages/blog/*.md')
//
---

<Blog>
  <h1 class="text-4xl pb-8">Blog</h1>
  <ul>
    {posts.map((post) => {
      // var date = post.frontmatter.date ? post.frontmatter.date
      return <li>
               <h2 class="text-2xl">
                 <time class="text-xl text-zinc-400 dark:text-zinc-500">{post.frontmatter.date}</time>
                 <a href={post.url}>{post.frontmatter.title}</a>
               </h2>
             </li>
    })}
  </ul>
</Blog>
