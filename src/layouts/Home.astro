---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import ImageBox from '../components/ImageBox.astro'
import Self from '../components/Self.astro'
import ContactForm from '../components/ContactForm.astro'
import WorkList from '../components/WorkList.astro'
import ArticleList from '../components/ArticleList.astro'

export interface Props {
  title: string;
}

const { title } = Astro.props;

---

<html lang="en" class="h-full antialiased js-focus-visible">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="../scripts/DarkMode.js"></script>
    <script src="../scripts/NavMobileMenu.js"></script>
  </head>
  <body class="flex h-full flex-col bg-zinc-50 bg-white dark:bg-black dark:text-zinc-100">

    <div class="fixed inset-0 flex justify-center sm:px-8">
      <div class="flex w-full max-w-7xl lg:px-8">
        <div class="w-full bg-white ring-1 ring-zinc-100 dark:bg-zinc-900 dark:ring-zinc-300/20">
        </div>
      </div>
    </div>

    <div class="relative">
      <Header />

      <main>
        <div class="sm:px-8 mt-6 md:mt-12">
          <div class="mx-auto max-w-7xl lg:px-8">
            <div class="relative px-4 sm:px-8 lg:px-12">
              <div class="mx-auto max-w-2xl lg:max-w-5xl">
                <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
                  <div class="flex flex-col gap-16">
                    <slot />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>

      <Footer />
    </div>


  </body>
</html>
